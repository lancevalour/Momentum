<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.TextInputLayout

        android:id="@+id/dialog_buy_price_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp">

        <EditText
            android:id="@+id/dialog_buy_price_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Buy Price"
            android:inputType="numberDecimal" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/dialog_buy_shares_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_buy_price_layout"
        android:layout_margin="24dp"
        android:layout_marginTop="20dp">

        <EditText
            android:id="@+id/dialog_buy_shares_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="# Of Shares"
            android:inputType="number" />

    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/dialog_buy_total_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_buy_shares_layout"
        android:layout_margin="24dp"
        android:layout_marginTop="20dp">

        <EditText
            android:id="@+id/dialog_buy_total_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Total Cost"
            android:inputType="number" />

    </android.support.design.widget.TextInputLayout>

</RelativeLayout>
