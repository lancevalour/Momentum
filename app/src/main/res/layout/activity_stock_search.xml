<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/activity_stock_search_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/theme_primary"
        android:elevation="4dp"
        android:theme="@style/ToolBarTheme"
        app:popupTheme="@style/Theme.AppCompat.Light.NoActionBar"></android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/activity_stock_search_toolbar"
        android:scrollbars="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/activity_stock_search_toolbar"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:background="?attr/selectableItemBackground"
            android:padding="10dp">

            <RelativeLayout
                android:id="@+id/activity_stock_search_symbol_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/activity_stock_search_symbol_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:text="GOOGL"
                    android:textColor="@color/color_subheader"
                    android:textSize="36sp" />

                <CheckBox
                    android:id="@+id/activity_stock_search_favorite_checkBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:button="@drawable/background_checkbox_favorite" />


            </RelativeLayout>

            <TextView
                android:id="@+id/activity_stock_search_price_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/activity_stock_search_symbol_layout"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif-light"
                android:text="Price"
                android:textColor="@color/color_subheader"
                android:textSize="58sp" />


            <TextView
                android:id="@+id/activity_stock_search_price_change_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/activity_stock_search_price_textView"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif"
                android:text="Price Change"
                android:textColor="@color/color_subheader"
                android:textSize="26sp" />

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/activity_stock_search_chart"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_below="@id/activity_stock_search_price_change_textView"
                android:layout_marginTop="25dp" />

            <RelativeLayout
                android:id="@+id/activity_stock_search_stat_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/activity_stock_search_chart"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="25dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="info" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:layout_below="@id/activity_stock_search_stat_layout"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="SELL" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="BUY" />

            </RelativeLayout>


        </RelativeLayout>

    </ScrollView>


</RelativeLayout>
