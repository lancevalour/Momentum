<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/activity_stock_search_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/theme_primary"
        android:elevation="4dp"
        android:theme="@style/ToolBarTheme"
        app:popupTheme="@style/Theme.AppCompat.Light.NoActionBar"></android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_stock_search_toolbar"
        android:background="?attr/selectableItemBackground"
        android:padding="10dp">

        <TextView
            android:id="@+id/activity_stock_search_symbol_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:text="Stock Name"
            android:textColor="@color/color_subheader"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/activity_stock_search_price_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/activity_stock_search_symbol_textView"
            android:layout_marginTop="5dp"
            android:fontFamily="sans-serif-medium"
            android:text="Price"
            android:textColor="@color/color_subheader"
            android:textSize="56sp" />


        <TextView
            android:id="@+id/activity_stock_search_price_change_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/activity_stock_search_price_textView"
            android:layout_marginTop="5dp"
            android:fontFamily="sans-serif-medium"
            android:text="Price Change"
            android:textColor="@color/color_subheader"
            android:textSize="24sp" />
    </RelativeLayout>
</RelativeLayout>
