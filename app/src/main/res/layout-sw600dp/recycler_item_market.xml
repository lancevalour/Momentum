<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recycler_item_stock_cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="?attr/selectableItemBackground"
    card_view:cardCornerRadius="4dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:padding="10dp">

        <TextView
            android:id="@+id/recycler_item_stock_name_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:text="Stock Name"
            android:textColor="@color/color_subheader"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/recycler_item_stock_price_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recycler_item_stock_name_textView"
            android:layout_marginTop="5dp"
            android:fontFamily="sans-serif-medium"
            android:text="Price"
            android:textColor="@color/color_subheader"
            android:textSize="18sp" />


        <TextView
            android:id="@+id/recycler_item_stock_price_change_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recycler_item_stock_price_textView"
            android:layout_marginTop="5dp"
            android:fontFamily="sans-serif-medium"
            android:text="Price Change"
            android:textColor="@color/color_subheader"
            android:textSize="18sp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_below="@id/recycler_item_stock_price_change_textView"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/recycler_item_stock_date_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="5dp"
                android:fontFamily="sans-serif"
                android:text="2014/06/30"
                android:textColor="@color/color_subheader"
                android:textSize="12sp" />

            <CheckBox
                android:id="@+id/recycler_item_stock_favorite_checkBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"

                android:button="@drawable/background_checkbox_favorite" />


        </RelativeLayout>

    </RelativeLayout>


</android.support.v7.widget.CardView>